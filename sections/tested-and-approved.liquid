{% assign section_title = "tested" %}
{%- style -%}
  .section-{{ section.id }} {
    height: auto;
    background: linear-gradient(180deg, #354199 32%, #232A5F 100%);
    justify-content: flex-start;
    align-items: flex-start;
    display: inline-flex;
    width: 100%;
    justify-content: center;
  }
  .{{ section_title }} .container {
    width: 690px;
    padding-top: 100px;
    padding-bottom: 100px;
    padding-left: 120px;
    padding-right: 34px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 56px;
    display: inline-flex;
  }
  .{{ section_title }} .image-banner {
    object-fit: cover;
    align-self: stretch;
    height: auto;
  }
  .{{ section_title }} .flex-container {
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 56px;
    display: flex;
  }
  .{{ section_title }} .header-container {
    align-self: stretch;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 24px;
    display: flex;
  }
  .{{ section_title }} .header-title {
    color: {{ section.settings.title_color }};
    font-size: 32px;
    font-weight: 700;
    word-wrap: break-word;
    font-family: 'Nord Bold' !important;    
  }
  .{{ section_title }} .header-subtitle {
    align-self: stretch;
    color: {{ section.settings.subtitle_color }};
    font-size: 24px;
    font-weight: 600;
    word-wrap: break-word;
    line-height: normal;
  }
  .{{ section_title }} .items-container {
    align-self: stretch;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 48px;
    display: flex;
  }
  .{{ section_title }} .item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
    text-align: left;
  }
  .{{ section_title }} .icon-container {
    display: flex;
    width: 32px;
    align-items: center;
    justify-content: center; /* Center icon horizontally */
    gap: 0.625rem;
  }
  .{{ section_title }} .icon-container svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    fill: #F9FF88;
  }
  .{{ section_title }} .details-container {
    display: flex;
    gap: 16px;
    flex-direction: column;
  }
  .{{ section_title }} .item-title {
    display: flex;
    gap: 24px;
  }
  .{{ section_title }} .item-title,
  .{{ section_title }} .item-title * {
    color: #F9FF88;
    text-align: left; /* Align percentage to the left for desktop */
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    font-family: 'Nord Regular';
  }
  .{{ section_title }} .item-description {
    padding-left: 56px;
  }
  .{{ section_title }} .item-description,
  .{{ section_title }} .item-description * {
    color: #F9FF88;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 25.25px;
    margin: 0;
    max-width: 450px;
  }
  .{{ section_title }} .button-section {
    display: flex;
    padding: 1rem 2rem;
    justify-content: center;
    align-items: center;
    gap: 0.625rem;
    border-radius: 6.25rem;
    background: #3A3CDA;
    color: #F9FF88;
    text-align: center;
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  @media screen and (max-width: 768px) {
    .{{ section_title }} .item {
        flex-direction: column; /* Stack rows vertically for mobile */
        align-items: center; /* Center all content horizontally */
        text-align: center; /* Center-align text for mobile */
        gap: 1rem; /* Space between rows */
    }
    .{{ section_title }} .details-container {
        align-items: center; /* Center them vertically */
        justify-content: center; /* Center them horizontally */
        gap: 0.5rem; /* Space between checkbox and percentage */
    }
    .{{ section_title }} .item-title {
        font-size: 1.5rem; /* Adjust font size for mobile */
        text-align: center; /* Center-align percentage for mobile */
    }
    .{{ section_title }} .item-description {
        text-align: center; /* Center-align description for mobile */
        margin-top: 0.5rem; /* Space between icon-title and description */
    }
  }
  @media screen and (max-width: 1305px) {
    .{{ section_title }} .image-banner {
      width: 600px;
    }
  }
  @media screen and (max-width: 749px) {
    .{{ section_title }} .header-title {
      font-size: 24px !important;
    }
    .{{ section_title }} .header-subtitle {
      font-size: 20px !important;
    }

    .{{  section_title  }} .item-description, .{{  section_title  }} .item-description * {
      font-size: 16px !important;
    }
  }
  @media screen and (max-width: 1165px) {
    .section-{{ section.id }} {
      flex-direction: column;
    }
    .{{ section_title }} .header-container {
      align-items: center;
    }
    .{{ section_title }} .header-subtitle,
    .{{ section_title }} .header-title {
      text-align: center;
      line-height: normal;
    }
    .{{ section_title }} .container {
      width: 100%;
      padding-top: 50px;
      padding-bottom: 50px;
      padding-left: 32px;
      padding-right: 32px;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      display: inline-flex;
      
    }
    .{{ section_title }} .image-banner {
      width: 100%;
      height: 805px;
      object-position: bottom;
    }
  }
  @media screen and (max-width: 856px) {
    .{{ section_title }} .items-container {
      flex-direction: column;
      align-items: center;
    }
    .{{ section_title }} .details-container {
      align-items: center;
      text-align: center;
    }
    .{{ section_title }} .header-container {
      gap: 16px;
    }
    .{{ section_title }} .image-banner {
      width: 100%;
      height: 425px;
    }
    .{{ section_title }} .section-title {
      font-size: 1.5rem;
    }
    .{{ section_title }} .subtitle {
      font-size: 1rem;
      line-height: 1.25rem;
    }
    .{{ section_title }} .header-title {
      text-align: center;
      font-size: 24px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      max-width: 300px;
    }
    .{{ section_title }} .header-subtitle {
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: normal;
    }
    .{{ section_title }} .item-title,
    .{{ section_title }} .item-title * {
      font-size: 24px;
      font-weight: 600;
      line-height: 30px;
    }
    .{{ section_title }} .item-description {
      padding-left: 56px;
    }
    .{{ section_title }} .item-description,
    .{{ section_title }} .item-description * {
      font-size: 16px;
      line-height: 20px;
      padding: 0;
      font-weight: 400;
    }
    .{{ section_title }} .items-container {
      gap: 24px;
    }
    .{{ section_title }} .icon-container {
      display: flex;
      width: 16px;
      align-items: center;
      gap: 0;
    }
    .{{ section_title }} .icon-container svg {
      width: 16px;
      height: 16px;
      flex-shrink: 0;
      fill: #F9FF88;
    }
    .{{ section_title }} .button-section {
      display: flex;
      height: 2.5rem;
      padding: 0.625rem 1.5rem;
      gap: 0.625rem;
      font-size: 0.875rem;
    }
    .{{ section_title }} .item-title {
      display: flex;
      gap: 8px;
    }
    .{{ section_title }} .flex-container {
      gap: 32px;
    }
  }
{%- endstyle -%}

<section class="section-{{ section.id }} {{ section_title }}">
  <div class="container">
    <div class="flex-container">
      <div class="header-container">
        <div class="header-title">{{ section.settings.title }}</div>
        <div class="header-subtitle">{{ section.settings.subtitle }}</div>
      </div>
      <div class="items-container">
        {% for item in section.blocks %}
          <div class="item">
            <div class="details-container">
              <div class="item-title">
                <div class="icon-container">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="33" viewBox="0 0 32 33" fill="none">
                    <rect y="0.813477" width="32" height="32" rx="16" fill="#F9FF88"/>
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M22.7948 10.6667L13.2482 19.88L10.7148 17.1734C10.2482 16.7334 9.51485 16.7067 8.98152 17.08C8.46152 17.4667 8.31485 18.1467 8.63485 18.6934L11.6348 23.5734C11.9282 24.0267 12.4348 24.3067 13.0082 24.3067C13.5548 24.3067 14.0748 24.0267 14.3682 23.5734C14.8482 22.9467 24.0082 12.0267 24.0082 12.0267C25.2082 10.8 23.7548 9.72003 22.7948 10.6534V10.6667Z" fill="#313C8B"/>
                  </svg>
                </div>
                {{ item.settings.title }}
              </div>
              <div class="item-description">{{ item.settings.description }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {%- if section.settings.image != blank -%}
    <img
      srcset="
        {%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
        {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
        {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
        {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
        {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
        {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
        {%- if section.settings.image.width >= 3000 -%}{{ section.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
        {%- if section.settings.image.width >= 3840 -%}{{ section.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
        {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
      "
      sizes="100vw"
      src="{{ section.settings.image | image_url: width: 1500 }}"
      loading="lazy"
      alt="{{ section.settings.image.alt | escape }}"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
      class="image-banner"
    >
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Tested and proven",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Set background image",
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#FFFFFF",
      "label": "Title color"
    },
    {
      "type": "text",
      "id": "title",
      "default": "TESTED AND APPROVED",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "title_color",
      "default": "#F9FF88",
      "label": "Title color"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "Revibe Delivers Hangover-Free Mornings!",
      "label": "Subtitle"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "default": "#F9FF88",
      "label": "Subtitle color"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 2,
      "label": "t:sections.multicolumn.settings.columns_desktop.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "GET HANGOVER-FREE NOW!",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "92.8%",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "default": "<p>reported feeling less intoxicated while still enjoying the alcohol high.</p>",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tested and proven",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
