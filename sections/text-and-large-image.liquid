{% assign section_title = "text-large-image" %}
{%- style -%}
  .border {
    display: block !important
  }
  .section-{{ section.id }} {
    height: auto;
    justify-content: flex-start;
    display: inline-flex;
    width: 100%;
    justify-content: center;
  }
  .{{ section_title }} .container {
    width: 750px;
    padding: 100px 120px 150px 60px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 56px;
    display: inline-flex;
    {% if section.settings.background_image %}
      background-image: url("{{ section.settings.background_image | image_url }}");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    {% else %}
      background: linear-gradient(180deg, #354199 32%, #232A5F 100%);
    {% endif %}
  }
  .{{ section_title }} .image-banner {
    object-fit: cover;
    align-self: stretch;
    height: auto;
  }
  .{{ section_title }} .flex-container {
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 56px;
    display: flex;
  }
  .{{ section_title }} .quote-container {
    justify-content: flex-start;
    align-items: flex-start;
    gap: 8px;
    display: inline-flex;
  }
  .{{ section_title }} .text-title {
    text-shadow: 0px 4px 15px rgba(0, 0, 0, 0.25);
    font-family: 'Nord Bold' !important;
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    color: {{ section.settings.title_color }};
    margin-bottom: -32px;
  }
  .{{ section_title }} .text-description {
    text-shadow: 0px 4px 15px rgba(0, 0, 0, 0.25);
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 24px;
    color: {{ section.settings.description_color }};
    margin-bottom: -32px;
  }
  .{{ section_title }} .author-details {
    text-shadow: 0px 4px 15px rgba(0, 0, 0, 0.25);
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: 32px;
    color: {{ section.settings.author_details_color }};
    font-family: 'Sofia Pro SemiBold' !important;
  }
  @media screen and (max-width: 1305px) {
    .{{ section_title }} .image-banner {
      width: 500px;
    }
  }
  @media screen and (max-width: 965px) {
    .{{ section_title }} .container {
      width: 100%;
      padding: 50px 32px;
    }
    .{{ section_title }} .flex-container {
      gap: 24px;
    }
    .{{ section_title }} .quote-container svg {
      width: 18.75px;
      height: 32px;
    }
    .{{ section_title }} .text-title {
      font-size: 24px;
    }
    .{{ section_title }} .text-description {
      font-size: 16px;
    }
    .{{ section_title }} .author-details {
      font-size: 18px;
    }
    .{{ section_title }} .image-banner {
      object-position: 100% 25%;
    }
  }
  @media screen and (max-width: 856px) {
    .{{ section_title }} .container {
      order: 1;
    }
    .section-{{ section.id }} {
      flex-direction: column;
    }
    .{{ section_title }} .image-banner {
      width: 100%;
      height: 340px;
      order: 2;
    }
  }
  @media screen and (max-width: 749px) {
    .{{ section_title }} .text-title {
      text-shadow: 0px 2px 5px rgba(0, 0, 0, 0.10);
      margin-bottom: 0px;
    }
    .{{ section_title }} .author-details {
      text-shadow: 0px 2px 5px rgba(0, 0, 0, 0.10);
      margin-bottom: 0px;
    }

    .border {
      margin-bottom: 0px !important;
    }

    .{{ section_title }} .text-description {
      margin-bottom: 0px;
    }
  }
  @media screen and (max-width: 768px) {
    .{{ section_title }} .text-title {
      margin-bottom: 0px;
    }
    .{{ section_title }} .author-details {
      margin-bottom: 0px;
    }

    .border {
      margin-bottom: 0px !important;
    }

    .{{ section_title }} .text-description {
      margin-bottom: 0px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }} {{ section_title }}">
  {%- if section.settings.image != blank -%}
    <img
      srcset="
        {%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
        {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
        {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
        {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
        {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
        {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
        {%- if section.settings.image.width >= 3000 -%}{{ section.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
        {%- if section.settings.image.width >= 3840 -%}{{ section.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
        {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
      "
      sizes="100vw"
      src="{{ section.settings.image | image_url: width: 1500 }}"
      loading="lazy"
      alt="{{ section.settings.image.alt | escape }}"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
      class="image-banner"
    >
  {%- endif -%}
  <div class="container">
    <div class="flex-container">
      <div class="quote-container">
        {{ 'icon-quote.svg' | inline_asset_content }}
        {{ 'icon-quote.svg' | inline_asset_content }}
      </div>
      <div class="text-title">The Doctor-Approved Party Hack!</div>
      <div class="border" style="width: 51.43px; height: 0px; border: 2px #A8DDFF solid; margin-bottom: -32px;"></div>
      <div class="text-description">“Revibe is a scientifically crafted supplement that helps reduce hangover symptoms by aiding alcohol metabolism and supporting liver detox. You can enjoy your time out with fewer worries about headaches and nausea. For best results, I recommend taking Revibe as directed before and after drinking.”</div>
      <div class="author-details">
        {{ section.settings.author }}
        <br/>
        {{ section.settings.title }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Text and Large Image",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Add Image Banner",
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#FFFFFF",
      "label": "Title color"
    },
    {
      "type": "text",
      "id": "title",
      "default": "THE DOCTOR-APPROVED PARTY HACK!",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "title_color",
      "default": "#FFFFFF",
      "label": "Title color"
    },
    {
      "type": "text",
      "id": "description",
      "default": "Description...",
      "label": "description"
    },
    {
      "type": "color",
      "id": "description_color",
      "default": "#FFFFFF",
      "label": "Description color"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author Name",
      "default": "Name of Author"
    },
    {
      "type": "text",
      "id": "author_title",
      "label": "Author Title",
      "default": "Nutritionist"
    },
    {
      "type": "color",
      "id": "author_details_color",
      "default": "#FFFFFF",
      "label": "Author details color"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Add Image Background",
    },
  ],
  "presets": [
    {
      "name": "Text and Large Image"
    }
  ]
}
{% endschema %}
